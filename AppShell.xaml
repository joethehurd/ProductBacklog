<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Capstone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Capstone"
    Shell.FlyoutBehavior="Flyout">
  
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
    />

    <ShellContent
        Title="Search"
        ContentTemplate="{DataTemplate local:SearchPage}"
        Route="SearchPage"
    />

    <ShellContent
        Title="Reports"
        ContentTemplate="{DataTemplate local:ReportsPage}"
        Route="ReportsPage"
    />

    <ShellContent
      Title="Log Out"
      ContentTemplate="{DataTemplate local:LogoutPage}"
      Route="LogoutPage"
    />
</Shell>
